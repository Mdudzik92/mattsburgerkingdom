<h1>Matt's Burger Kingdom!!! Nom nom nom...</h1>


<div class="row">
  <h2> Menu </h2>
    <div class="col-6">
        <ul>
          {{#each burgerdata}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
            {{!-- <li class="burgername">
                {{this.burger_name}}
            </li>
            {{/unless}}
            {{/each}} --}}
        </ul>
    </div>

  <h2> Devoured </h2>
    <div class="col-6">
        <ul>
          {{#each burger}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}

            {{!-- <li class="burger" data-id="{{this.id}}">
                {{this.burger_name}}
            </li> --}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
</div>

<h2>Add Your Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="add">Add burger</label><br>
    <input type="radio" name="add" value="1" checked> Devoured!<br>
    <input type="radio" name="add" value="0"> Not devoured
  </div>

<button type="submit">Add burger</button>
</form>