<div class="main">
<h1 class="h1">Matt's Burger Kingdom!!!</h1>
<h4 class="h4">Nom nom nom...</h4>

  <h2 class="h2"> Menu </h2>
  
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
            {{/unless}}
          {{/each}}
        </ul>
    {{!-- </div> --}}

  <h2 class="h2"> Devoured </h2>
  
        <ul>
          {{#each burgers}}
            {{#if devoured}}
            <li>{{name}}</li>
            {{/if}}
          {{/each}}
        </ul>
    {{!-- </div> --}}
{{!-- </div> --}}

<h2 class="h2">Add Your Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca" class="burger-input">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    {{!-- <label for="devoured">Let's eat!!!</label> --}}
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Uneaten
  </div>

<button type="submit" class="btn">Add Burger</button>
</form>
</div>